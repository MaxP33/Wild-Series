{% extends 'base.html.twig' %}

{% block title %}{{ 'category'|trans }}{{ category.name}}{% endblock %}

{% block body %}
    <h1>{{ 'category'|trans }} {{ category.name}}</h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.id}} / {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        {{ 'program.none'|trans }}
    {% endfor %}
    <a href="{{ path('app_index') }}">
        {{ 'homepage'|trans }}
    </a>
{% endblock %}
