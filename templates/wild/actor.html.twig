{% extends 'base.html.twig' %}

{% block title %}{{ actor.name}}{% endblock %}

{% block body %}
    <h1>{{ actor.name}}</h1>
    {% for program in programs %}
        <div>
            <h2><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        {{ 'actor.none'|trans }}
    {% endfor %}
    <a href="{{ path('app_index') }}">
        {{ 'homepage'|trans }}
    </a>
{% endblock %}
