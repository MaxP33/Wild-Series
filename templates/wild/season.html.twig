{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <h2 class="mt-0">{{ season.description }}</h2>
            <p>Liste des épisodes : </p>
                {% for episode in episodes %}
                    <div>
                    <a href="{{ path('wild_program_season_episode', {'episode' : episode.id}) }}">Episode {{ episode.number }}</a>
                    </div>
                {% endfor %}
        </div>
    </div>

    <a href="{{ path('wild_show', {'slug' : program.slug}) }}">
        Retour à la série {{ program.title }}
    </a>

{% endblock %}
