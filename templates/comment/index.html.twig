{% extends 'base.html.twig' %}

{% block title %}{{ 'comment'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comment'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'comment'|trans }}</th>
                <th>{{ 'comment.rate'|trans }}</th>
                <th>{{ 'comment.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'comment.none'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">{{ 'comment.new'|trans }}</a>
{% endblock %}
